{
    "compilerOptions": {
      /* Basic Options */
      "module": "commonjs",
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
  
      /* Strict Type-Checking Options */
      "strict": true,
  
      /* Module Resolution Options */
      "moduleResolution": "node",
      "esModuleInterop": true,
  
      /* Advanced Options */
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    }
  }